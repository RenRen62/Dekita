{
  "name": "@dekita/lambda",
  "main": "index.js",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "clean-dist": "rimraf ./dist",
    "test": "ts-node -r tsconfig-paths/register db/createTable.ts && jest --config jest.config.js",
    "test:cov": "ts-node -r tsconfig-paths/register db/createTable.ts && jest --config jest.config.js --colors --coverage",
    "tsc": "pnpm clean-dist && tsc -p tsconfig.build.json",
    "lint": "eslint --fix --config .eslintrc.js ./**/*.ts",
    "lint-staged": "lint-staged --config .lintstagedrc.js",
    "check-changed": "CHANGED_FILES=$( (git diff --name-only HEAD && git ls-files --others --exclude-standard) | grep -E '\\.(ts|tsx)$' | grep '^apps/lambda/' || true); (if [ -n \"$CHANGED_FILES\" ]; then echo \"Processing files:\"; echo \"$CHANGED_FILES\"; echo \"$CHANGED_FILES\" | sed 's|^apps/lambda/||' | xargs eslint --cache --cache-location .eslintcache --max-warnings 0; fi) & (npx tsc --noEmit --incremental --tsBuildInfoFile .tsbuildinfo) & wait"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.902.0",
    "@aws-sdk/lib-dynamodb": "^3.902.0",
    "dayjs": "^1.11.10",
    "ramda": "^0.30.0",
    "ts-pattern": "^5.1.1"
  },
  "devDependencies": {
    "@secretlint/secretlint-rule-preset-recommend": "^8.2.4",
    "@tsconfig/strictest": "^2.0.5",
    "@types/aws-lambda": "^8.10.152",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.5.2",
    "@types/ws": "^8.5.11",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "aws-lambda": "^1.0.7",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.57.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-functional": "^6.5.1",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "lint-staged": "^13.2.3",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.2.5",
    "secretlint": "^8.2.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0"
  }
}
